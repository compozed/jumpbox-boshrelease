---
name: dockersh

templates:
  dockersh: bin/dockersh
  pre-start: bin/pre-start
  post-start: bin/post-start
  dockerpull: bin/dockerpull
  dockerpull_ctl: bin/dockerpull_ctl
  env: config/env

packages: []

properties:
  image:
    description: The docker image you want to use for the user containers
    default: busybox
  volume:
    description: The docker volume you want to use for the user containers, optional
    example: homedirs
  pull_interval: 
    decription:  Sets the docker pull interval in seconds Default is 0 disables the automatic refresh of the Docker image
    default: 0 
  mount:
    description: Where the docker volume should be mounted
    default: /home
  command:
    description: The command you want to execute when you run the container like /bin/bash
    example: /bin/bash
  user:
    description: User to use inside the container
    default: root
  env:
    description: Environment variable available to all containers
    example: |
      FOO: BAR
